// Prisma Schema for Mission Control
// PostgreSQL database for Clawdbot task management

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// CORE MODELS
// ============================================

model Project {
  id          String    @id @default(uuid())
  name        String
  folderPath  String    // Absolute or relative path where work is done
  color       String?   // Optional hex color for UI (e.g. #58a6ff)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  archivedAt  DateTime? // null = active; set on "delete" for soft delete

  tasks         Task[]
  stageSettings StageSetting[]

  @@index([archivedAt])
}

model Task {
  // Identity
  id          String   @id @default(uuid())
  title       String
  description String?  @db.Text

  // Project (optional)
  projectId   String?
  project     Project? @relation(fields: [projectId], references: [id])

  // Execution State
  status      String   @default("Backlog")
  executionState String @default("queued") // queued | running | waiting | idle | failed | completed
  assignee    String?
  priority    String   @default("Medium")
  tags        String[]

  // Bot Observability
  planChecklist String[]
  currentStepIndex Int   @default(0)
  blockedReason  String?
  blockedBy      String[] // Array of task IDs that this task depends on
  lastActionAt   DateTime?
  lastHeartbeatAt DateTime?

  // Time Tracking
  estimate     Float?
  timeSpent    Float    @default(0)

  // State Timer
  currentStateStartedAt DateTime? // When the task entered its current status

  // Approval Gates
  needsApproval Boolean @default(false)
  approvedAt    DateTime?
  approvedBy    String?

  // Session Binding (for bot autonomy + crash recovery)
  sessionKey      String?   // Clawdbot session holding this task
  sessionLockedAt DateTime? // When lock was acquired (for stale detection)

  // Work Output (for auditability + review)
  results      String?  @db.Text  // Markdown summary of work done
  planDocument String?  @db.Text  // Current plan from planning conversation (updated on planning-complete)
  commits      Json?    // Array of {sha, message, url, timestamp}

  // Dates
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  startedAt    DateTime?
  completedAt  DateTime?
  dueDate      DateTime?

  // Audit
  auditEvents  AuditEvent[]
  progressLog  TaskProgressLogEntry[]
  botRuns      BotRun[]
  conversationMessages TaskConversationMessage[]
  planningMessages     TaskPlanningMessage[]
  stateLogs    TaskStateLog[]
  dependencies TaskDependency[] @relation("DependentTask")
  dependents   TaskDependency[] @relation("DependencyTask")
  
  @@index([status])
  @@index([assignee])
  @@index([executionState])
  @@index([createdAt])
  @@index([sessionKey])
  @@index([projectId])
}

model AuditEvent {
  id          String   @id @default(uuid())
  
  // Event Identity
  eventType   String   // task.created, task.status_changed, task.execution_state_changed, etc.
  entityType  String   // "Task", "BotRun"
  entityId    String   // ID of the affected entity
  
  // Actor
  actor       String   // "human" or "clawdbot"
  
  // Payload
  before      Json?
  after       Json?
  
  // Metadata
  timestamp   DateTime @default(now())
  
  // Relationship
  taskId      String?
  task        Task?    @relation(fields: [taskId], references: [id])
  
  @@index([entityType, entityId])
  @@index([timestamp])
  @@index([actor])
  @@index([taskId])
}

model TaskProgressLogEntry {
  id          String   @id @default(uuid())
  step        String   // Description of action taken
  status      String   @default("done") // pending | running | done | failed | skipped
  completedAt DateTime @default(now())
  taskId      String
  task        Task     @relation(fields: [taskId], references: [id])
  
  @@index([taskId])
}

// ============================================
// BOT RUN MODEL
// ============================================

model BotRun {
  id          String   @id @default(uuid())
  taskId      String
  task        Task     @relation(fields: [taskId], references: [id])
  
  // Run Status
  status      String   @default("running") // running | failed | completed | cancelled
  
  // Timing
  startedAt   DateTime @default(now())
  endedAt     DateTime?
  
  // Summary & Logs
  summary     String?
  log         Json?    // Structured log entries
  
  // Retry tracking
  attemptNumber Int    @default(1)
  parentRunId  String? // For retries

  conversationMessages TaskConversationMessage[]
  
  @@index([taskId])
  @@index([status])
  @@index([startedAt])
}

// ============================================
// TASK CONVERSATION (ongoing feed per task)
// ============================================

model TaskConversationMessage {
  id        String   @id @default(uuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  role      String   // "user" | "assistant"
  content   String   @db.Text
  createdAt DateTime @default(now())
  botRunId  String?
  botRun    BotRun?  @relation(fields: [botRunId], references: [id], onDelete: SetNull)

  @@index([taskId])
  @@index([createdAt])
  @@index([botRunId])
}

// ============================================
// TASK PLANNING CONVERSATION (separate thread for planning phase)
// ============================================

model TaskPlanningMessage {
  id        String   @id @default(uuid())
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  role      String   // "user" | "assistant"
  content   String   @db.Text
  createdAt DateTime @default(now())

  @@index([taskId])
  @@index([createdAt])
}

// ============================================
// TASK DEPENDENCIES
// ============================================

model TaskDependency {
  id              String   @id @default(uuid())
  dependentTaskId String   // The task that is blocked
  dependentTask   Task     @relation("DependentTask", fields: [dependentTaskId], references: [id])
  
  dependencyTaskId String  // The task this depends on
  dependencyTask   Task    @relation("DependencyTask", fields: [dependencyTaskId], references: [id])
  
  createdAt       DateTime @default(now())
  
  @@unique([dependentTaskId, dependencyTaskId])
  @@index([dependentTaskId])
  @@index([dependencyTaskId])
}

// ============================================
// TASK STATE LOGS (for time tracking)
// ============================================

model TaskStateLog {
  id          String   @id @default(uuid())
  taskId      String
  task        Task     @relation(fields: [taskId], references: [id])
  status      String   // The status (Backlog, Ready, InProgress, etc.)
  enteredAt   DateTime @default(now())
  exitedAt    DateTime?
  duration    Int?     // Duration in seconds
  
  @@index([taskId])
  @@index([status])
  @@index([enteredAt])
}

// ============================================
// STAGE SETTINGS (prompts per Kanban stage)
// ============================================

model StageSetting {
  id                         String   @id @default(uuid())
  scope                      String   // "global" | "project"
  projectId                  String?  // null for global
  project                    Project? @relation(fields: [projectId], references: [id])
  stage                      String   // New, Planning, Backlog, Ready, InProgress, Blocked, Review, Failed, Done

  systemPrompt               String?  @db.Text // Planning + other stages
  defaultModel               String?  // e.g. "minimax"
  planningDestinationStatus  String?  // Where to move when planning is done (e.g. Backlog)
  readyInstructions          String?  @db.Text // Prompt sent with Ready items
  projectContextTemplate     String?  @db.Text // Template for project context (Ready); {{projectName}}, {{folderPath}}

  @@unique([scope, projectId, stage])
  @@index([scope, projectId])
  @@index([projectId])
}
